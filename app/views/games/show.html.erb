<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold text-gray-900">Game #<%= @game.game_id %></h1>
      <a href="<%= games_path %>" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        ‚Üê Back to Games
      </a>
    </div>
    
    <!-- Blockchain Information Header -->
    <div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg p-6 mb-6 text-white">
      <% if @house_balance && @house_balance[:success] %>
        <!-- Balance and Token Info -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
          <!-- ETH Balance Card -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-center">
            <div class="text-lg font-semibold">ETH Balance</div>
            <div class="text-2xl font-bold text-yellow-300"><%= sprintf("%.6f", @house_balance[:balance_eth]) %> ETH</div>
            <div class="text-xs opacity-75 mt-1"><%= @house_balance[:balance_wei] %> wei</div>
          </div>
          
          <!-- Gacha Token Card -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-center">
            <div class="text-lg font-semibold">Gacha Token Supply</div>
            <% if @house_balance[:gacha_total_supply] && @house_balance[:gacha_total_supply] > 0 %>
              <div class="text-2xl font-bold text-green-300"><%= sprintf("%.2f", @house_balance[:gacha_total_supply]) %></div>
            <% else %>
              <div class="text-2xl font-bold text-gray-300">N/A</div>
              <div class="text-xs opacity-75 mt-1">Supply Unknown</div>
            <% end %>
          </div>
          
          <!-- Contract Status Card -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-center">
            <div class="text-lg font-semibold">Contract Status</div>
            <div class="text-2xl font-bold text-green-300">Active</div>
            <div class="text-xs opacity-75 mt-1">Connected</div>
          </div>
        </div>
        
        <!-- Address Information -->
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Contract Address -->
            <div class="text-center">
              <div class="text-sm font-medium text-blue-200 mb-1">Contract Address</div>
              <a href="<%= BlockchainConfig.block_explorer_url %>/address/<%= @house_balance[:contract_address] %>" target="_blank" class="text-xs text-blue-200 hover:text-blue-100 underline break-all">
                <%= @house_balance[:contract_address] %>
              </a>
            </div>
            
            <!-- Gacha Token Address -->
            <% if @house_balance[:gacha_token_address].present? %>
            <div class="text-center">
              <div class="text-sm font-medium text-blue-200 mb-1">Gacha Token</div>
              <a href="<%= BlockchainConfig.block_explorer_url %>/address/<%= @house_balance[:gacha_token_address] %>" target="_blank" class="text-xs text-blue-200 hover:text-blue-100 underline break-all">
                <%= @house_balance[:gacha_token_address] %>
              </a>
            </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="text-center">
          <p class="text-red-200 text-lg">Failed to fetch house balance</p>
          <% if @house_balance && @house_balance[:error] %>
            <p class="text-sm opacity-90 mt-2">Error: <%= @house_balance[:error] %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Game Details -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Game Information -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Game Information</h2>
      </div>
      <div class="px-6 py-4 space-y-4">
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-500">Game ID:</span>
          <span class="text-sm text-gray-900 font-mono">#<%= @game.game_id %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-500">Game State:</span>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
            <%= case @game.game_state
                when 'not_started' then 'bg-gray-100 text-gray-800'
                when 'pending' then 'bg-yellow-100 text-yellow-800'
                when 'completed' then 'bg-green-100 text-green-800'
                else 'bg-gray-100 text-gray-800'
                end %>">
            <%= case @game.game_state
                when 'not_started' then 'Not Started'
                when 'pending' then 'Pending VRF'
                when 'completed' then 'Completed'
                else 'Unknown'
                end %>
          </span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-500">Bet Amount:</span>
          <span class="text-sm text-gray-900 font-mono">
            <%= @game.bet_amount.present? ? "#{(@game.bet_amount.to_f / 1e18).round(6)} ETH" : "N/A" %>
          </span>
        </div>
        <% if @game.payout.present? && @game.payout.to_i > 0 %>
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-500">Payout:</span>
          <span class="text-sm text-green-600 font-mono font-semibold">
            <%= "#{(@game.payout.to_f / 1e18).round(6)} ETH" %>
          </span>
        </div>
        <% end %>
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-500">Request Timestamp:</span>
          <span class="text-sm text-gray-900" title="<%= @game.request_timestamp.strftime("%Y-%m-%d %H:%M:%S UTC") %>">
            <%= time_ago_in_words(@game.request_timestamp) %> ago
          </span>
        </div>
        <% if @game.completed_timestamp.present? %>
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-500">Completed Timestamp:</span>
          <span class="text-sm text-gray-900" title="<%= @game.completed_timestamp.strftime("%Y-%m-%d %H:%M:%S UTC") %>">
            <%= time_ago_in_words(@game.completed_timestamp) %> ago
          </span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-500">Total Duration:</span>
          <span class="text-sm text-gray-900 font-semibold text-blue-600">
            <%= @game.total_time ? "#{@game.total_time}s" : "N/A" %>
          </span>
        </div>
        <% end %>
      </div>
    </div>

    <!-- Player Information -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Player Information</h2>
      </div>
      <div class="px-6 py-4 space-y-4">
        <div>
          <span class="text-sm font-medium text-gray-500">Player Address:</span>
          <p class="text-sm text-gray-900 font-mono break-all mt-1"><%= @game.player_address %></p>
        </div>
        <% if @game.player_card.present? %>
        <div>
          <span class="text-sm font-medium text-gray-500">Player Card:</span>
          <p class="text-sm text-gray-900 font-mono mt-1"><%= @game.player_card.to_i %></p>
        </div>
        <% end %>
        <div>
          <span class="text-sm font-medium text-gray-500">Player Won:</span>
          <p class="text-sm font-mono mt-1 <%= @game.player_won ? 'text-green-600' : 'text-red-600' %>">
            <%= @game.player_won ? 'Yes' : 'No' %>
          </p>
        </div>
      </div>
    </div>

    <!-- Cards -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Game Cards</h2>
      </div>
      <div class="px-6 py-4 space-y-4">
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-500">Player Card:</span>
          <span class="text-sm text-gray-900 font-mono"><%= @game.player_card.present? ? @game.player_card.to_i : "?" %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm font-medium text-gray-500">House Card:</span>
          <span class="text-sm text-gray-900 font-mono"><%= @game.house_card.present? ? @game.house_card.to_i : "?" %></span>
        </div>
      </div>
    </div>

    <!-- Game Result -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Game Result</h2>
      </div>
      <div class="px-6 py-4 space-y-4">
        <div class="flex items-center justify-center space-x-8">
          <div class="text-center">
            <div class="text-2xl font-bold text-gray-900"><%= @game.player_card.present? ? @game.player_card.to_i : "?" %></div>
            <div class="text-sm text-gray-500">Player</div>
          </div>
          <div class="text-2xl text-gray-400">VS</div>
          <div class="text-center">
            <div class="text-2xl font-bold text-gray-900"><%= @game.house_card.present? ? @game.house_card.to_i : "?" %></div>
            <div class="text-sm text-gray-500">House</div>
          </div>
        </div>
        
        <% if @game.game_state == 'completed' && @game.result.present? %>
        <div class="text-center space-y-2">
          <% case @game.result %>
          <% when 'player_won' %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-lg font-medium bg-green-100 text-green-800">
              Player Wins!
            </span>
          <% when 'house_won' %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-lg font-medium bg-red-100 text-red-800">
              House Wins!
            </span>
          <% when 'tie' %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-lg font-medium bg-yellow-100 text-yellow-800">
              Tie!
            </span>
          <% else %>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-lg font-medium bg-gray-100 text-gray-800">
              Unknown
            </span>
          <% end %>
          <% if @game.total_time.present? %>
            <div class="text-sm text-blue-600 font-medium">
              Game Duration: <%= @game.total_time %>s
            </div>
          <% end %>
        </div>
        <% else %>
        <div class="text-center space-y-2">
          <span class="inline-flex items-center px-4 py-2 rounded-full text-lg font-medium bg-yellow-100 text-yellow-800">
            Waiting for VRF...
          </span>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Raw Data Section -->
  <div class="mt-8 bg-white shadow rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Raw Game Data</h2>
    </div>
    <div class="px-6 py-4">
      <pre class="text-xs text-gray-600 overflow-x-auto"><%= JSON.pretty_generate(@game.attributes) %></pre>
    </div>
  </div>
</div>
